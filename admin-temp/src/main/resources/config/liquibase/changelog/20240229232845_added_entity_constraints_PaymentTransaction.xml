<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity PaymentTransaction.
    -->
    <changeSet id="20240229232845-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="payment_method_id"
                                 baseTableName="payment_transaction"
                                 constraintName="fk_payment_transaction__payment_method_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_method"
                                 />

        <addForeignKeyConstraint baseColumnNames="payment_provider_id"
                                 baseTableName="payment_transaction"
                                 constraintName="fk_payment_transaction__payment_provider_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_provider"
                                 />

        <addForeignKeyConstraint baseColumnNames="viewer_id"
                                 baseTableName="payment_transaction"
                                 constraintName="fk_payment_transaction__viewer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="user_profile"
                                 />
    </changeSet>
</databaseChangeLog>
