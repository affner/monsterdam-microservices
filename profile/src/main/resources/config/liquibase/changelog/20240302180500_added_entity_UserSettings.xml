            <column name="content_filter" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="message_blur_intensity" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="activity_status_visibility" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="two_factor_authentication" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="sessions_active_count" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="email_notifications" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="important_subscription_notifications" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="new_messages" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="post_replies" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="post_likes" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="new_followers" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="sms_new_stream" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="toast_new_comment" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="toast_new_likes" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="toast_new_stream" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="site_new_comment" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="site_new_likes" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="site_discounts_from_followed_users" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="site_new_stream" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="site_upcoming_stream_reminders" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="created_date" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="last_modified_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="is_deleted" type="boolean">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="user_settings" columnName="last_modified_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="user_settings" columnName="created_date" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
        Load sample data generated with Faker.js
